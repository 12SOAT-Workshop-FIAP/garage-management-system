{
  "name": "workshop-garage-system",
  "version": "0.1.0",
  "description": "Garage Management System - DDD Base Project",
  "scripts": {
    "dev": "nest start --watch",
    "start": "nest start",
    "start:prod": "node dist/main.js",
    "build": "nest build",
    "lint": "eslint '{src,test}/**/*.ts' --fix",
    "format": "prettier --write 'src/**/*.ts' 'test/**/*.ts'",
    "test": "jest",
    "test:unit": "jest --testPathIgnorePatterns=e2e",
    "test:watch": "jest --watch",
    "test:watch:unit": "jest --watch --testPathIgnorePatterns=e2e",
    "test:coverage": "jest --coverage",
    "test:coverage:unit": "jest --coverage --testPathIgnorePatterns=e2e",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json --runInBand",
    "docker:up": "docker-compose up --build -d",
    "docker:down": "docker-compose down",
    "migration:generate": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:generate --dataSource ./ormconfig.ts src/migrations/migration",
    "migration:create": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:create",
    "migration:run": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:run --dataSource ./ormconfig.ts",
    "migration:revert": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:revert --dataSource ./ormconfig.ts",
    "seed:run": "ts-node -r tsconfig-paths/register src/seed/seed.ts",
    "migration:generate:js": "node ./node_modules/typeorm/cli.js migration:generate --dataSource ./dist/ormconfig.js src/migrations/migration",
    "migration:run:js": "node ./node_modules/typeorm/cli.js migration:run --dataSource ./dist/ormconfig.js",
    "seed:run:js": "node ./dist/src/seed/seed.js"
  },
  "dependencies": {
    "@faker-js/faker": "^9.9.0",
    "@getbrevo/brevo": "^3.0.1",
    "@jorgebodega/typeorm-factory": "^2.1.0",
    "@jorgebodega/typeorm-seeding": "^7.1.0",
    "@nestjs/common": "^11.1.5",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.5",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.1.5",
    "@nestjs/swagger": "^11.2.0",
    "@nestjs/typeorm": "^11.0.0",
    "@newrelic/winston-enricher": "^4.0.1",
    "@types/cookie-parser": "^1.4.9",
    "@types/handlebars": "^4.1.0",
    "bcrypt": "^6.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "cookie-parser": "^1.4.7",
    "cpf-cnpj-validator": "^1.0.3",
    "handlebars": "^4.7.8",
    "newrelic": "^13.7.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "swagger-ui-express": "^5.0.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typeorm": "^0.3.25",
    "winston": "^3.19.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.7",
    "@nestjs/schematics": "^11.0.5",
    "@nestjs/testing": "^11.1.5",
    "@types/bcrypt": "^6.0.0",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/newrelic": "^9.14.8",
    "@types/node": "^24.6.2",
    "@types/passport-jwt": "^4.0.1",
    "@types/pg": "^8.15.5",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.3",
    "jest": "^30.0.5",
    "passport": "^0.7.0",
    "prettier": "^3.6.2",
    "supertest": "^7.1.3",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3"
  }
}
